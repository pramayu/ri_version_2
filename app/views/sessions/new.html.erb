<div class="login">
  <div class="frame">
    <h2 class="text-center title">RUANG IDE</h2>
    <div class="ckdj">
      <%= form_for(:session, url: login_path) do |f| %>
      <div class="form-group">
        <%= f.label :email  %>
        <%= f.email_field :email, class: "form-control dsj" %>
      </div>
      <div class="form-group">
        <%= f.label :password  %>
        <%= link_to "(forgot password)", new_password_reset_path %>
        <%= f.password_field :password, class: "form-control dsj" %>
      </div>
      <div class="form_">
        <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span>Remember me on this computer</span>
      </div>
      <% end %>
      <%= f.submit "LOGIN", class: 'btn btn-success'  %>
      <% end %>
    </div>
    <div class="clear"></div>
  </div>
</div>

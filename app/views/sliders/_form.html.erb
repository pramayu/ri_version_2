<%= form_for(@slider) do |f| %>
  <div class="form-group">
    <%= f.label :caption %>
    <%= f.text_field :caption, class: "form-control", autofocus: true %>
  </div>

  <div class="form-group">
    <%= f.label :subcaption %>
    <%= f.text_field :subcaption, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :image, "Slider Image" %>
    <%= f.file_field :image %>
  </div>
  <%= f.submit "Upload", class: "btn btn-default" %>
<% end %>

<%= form_for(@event) do |f|  %>
  <div class="form-group">
    <%= f.label :name  %>
    <%= f.text_field :name, class: "form-control", autofocus: true  %>
  </div>

  <div class="form-group">
    <%= f.label :description  %>
    <%= f.text_area :description, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= f.label :event_date  %>
    <%= f.date_field :event_date, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= f.collection_select(:category_id, @categories, :id, :name, {prompt: "Choose category"}, {class: "form-control form_cate"}) %>
  </div>

  <div class="form-group">
    <%= f.label :image,  "Thumbnail" %>
    <%= f.file_field :image  %>
  </div>

  <div class="form-group">
    <%= f.fields_for :sources, Gallery.new  do |g| %>
      <%= g.label :source, "Galleries" %>
      <%= g.file_field :source, multiple: true, name: "event[galleries_attributes][][source]"  %>
    <% end %>
  </div>
  <%= f.submit "Upload", class: "btn btn-default"  %>
<% end  %>
